<%- include("../includes/header.ejs", {title:"Add New Resume"}); %>

<h1>Add New Skills</h1>
<br />
<form action="/skill/insert" method="get">
    <b>Skill Name: </b><input id="skill_name" name="skill_name" type="text" />
    <br />
    <br />
    <b>Description: </b><input id="description" name="description" type="text" />
    <br />
    <br />
    <b>Skill(s)</b>
    <br />
    <select id="skill_id" name="skill_id" multiple="multiple">
        <% for(var x=0; skill.length > x; x++ ) { %>
        <option value="<%= skill[x].skill_id %>"><%= skill[x].skill_name %></option>
        <% } %>
    </select>
    <br />

    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#skill_id').multiselect();
        });
    </script>

    <input type="submit" />
</form>

<%- include("../includes/footer.ejs"); %>